            $('#btnJoin').click(function(){

                //id , passwd 등의 warning 문자를 초기화하기위해 아래처럼 문구를 초기화한다. $(.warning) 중 
                //아래에서 정의한 .warning 는 클래스명을 나타낸다.
                $('.warning').text('');

